<h1>Applicants Name: <%= @application.name %></h1>
<p>Applicants Address: <%= @application.address %></p>
<p>Applicants Reasoning: <%= @application.description %></p>
<p> Pet Names: </p> 
<section id="mypets-<%= @application.id %>">
<% @applicant_pets.each do |pet| %> 
  <%= link_to "#{pet.name}", "/pets/#{pet.id}" %><br>
<% end %>
</section>
<p>Applicants Status: <%= @application.status %></p>

<% if @application.status == "In Progress" %>
  <h3>Add a Pet to this Application</h3>
   <%= form_with url: "/applications/#{@application.id}", method: :get, data: { turbo: false } do |form| %>
    <%= form.label :pet_name, "Search for Pets" %>
    <%= form.text_field :pet_name %>
    <%= form.submit "Submit" %>
  <% end %>
<% end %>

<% if !@pets.nil? %>
  <% @pets.each do |pet| %>
  <%= pet.name %><%= button_to "Adopt this Pet", "/applications/#{@application.id}/#{pet.id}", method: :patch, data: { turbo: false } %>
  <% end %>

  <%= form_with url: "/applications/#{@application.id}", method: :patch, data: { turbo: false } do |form| %>
    <%= form.label :reasoning, "Why would you make a good owner for these pet(s)?" %>
    <%= form.text_field :reasoning %>
    <%= form.submit "Submit Application" %>
  <% end %>
<% end %>
